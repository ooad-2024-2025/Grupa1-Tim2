@{
    ViewData["Title"] = "Početna";
}

<link rel="stylesheet" href="~/css/style.css" />

<div class="main-container">
    <div class="sidebar">
        <ul>
            <li><i class="fas fa-car"></i> Vožnje</li>
            <li><i class="fas fa-user"></i> <a asp-controller="Profile" asp-action="Index">Profil</a></li>
            <li><i class="fas fa-headset"></i> Podrška</li>
        </ul>
    </div>

    <div class="content">
        <div class="welcome-card">
            <img src="~/images/car.png" alt="Auto" class="car-icon" />
            <h1>YourRide</h1>
            <p>Uživajte u vožnji sa nama!</p>

            <!-- Dugme vodi na akciju PrikazSlobodnihVozaca -->
            <button class="start-button" onclick="location.href='@Url.Action("PrikazSlobodnihVozaca", "Home")'">
                Započni
            </button>
        </div>
    </div>
</div>
