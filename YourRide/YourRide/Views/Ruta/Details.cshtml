@model YourRide.Models.Ruta

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Ruta</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PocetnaLokacija)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PocetnaLokacija.ID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KrajnjaLokacija)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KrajnjaLokacija.ID)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Nepostojeci"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a>
    }
    <a asp-action="Index" style="color: #2d7c85;">Nazad na listu</a>
</div>
