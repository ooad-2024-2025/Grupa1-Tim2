@model YourRide.Models.Ocjena

@{
    ViewData["Title"] = "Detalji";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Ocjena</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ocjena)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ocjena)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.komentar)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.komentar)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Korisnik)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Korisnik.UserName)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Nepostojeci"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a>
    }
    <a asp-action="Index" style="color: #2d7c85;">Nazad na listu</a>
</div>
