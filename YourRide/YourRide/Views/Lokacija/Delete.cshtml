@model YourRide.Models.Lokacija

@{
    ViewData["Title"] = "Izbriši lokaciju";
}

<h1>@ViewData["Title"]</h1>

<h3>Jeste li sigurni da želite izbrisati?</h3>
<div>
    <h4>Lokacija</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Grad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Grad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Latituda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Latituda)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Longituda)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Longituda)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Izbriši" class="btn btn-danger" /> |
        <a asp-action="Index" style="color: #2d7c85;">Nazad na listu</a>
    </form>
</div>
