@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Potvrda registracije";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Potvrda registracije - YourRide</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            height: 100vh;
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .confirmation-box {
            background-color: white;
            padding: 3rem;
            border-radius: 0.5rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            width: 100%;
            text-align: center;
        }

            .confirmation-box h2 {
                margin-bottom: 1rem;
                color: #2d7c85;
            }

            .confirmation-box p {
                margin-bottom: 1rem;
            }

            .confirmation-box a {
                color: #2d7c85;
            }
    </style>
</head>
<body>
    <div class="confirmation-box">
        <h2>Registracija uspješna!</h2>

        @if (Model.DisplayConfirmAccountLink)
        {
            <p>
                Trenutno aplikacija ne koristi pravi email servis.<br />
                Obično biste primili email, ali za testiranje možete potvrditi nalog klikom ovdje:
            </p>
            <p>
                <a id="confirm-link" href="@Model.EmailConfirmationUrl">Potvrdi svoj nalog</a>
            </p>
        }
        else
        {
            <p>
                Provjerite svoju email adresu i slijedite upute za potvrdu naloga.
            </p>
        }

        <a href="/Identity/Account/Login" class="btn btn-outline-secondary mt-3">Nazad na prijavu</a>
    </div>
</body>
</html>
